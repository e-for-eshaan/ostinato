{
  "extends": ["eslint:recommended", "next"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "no-unused-vars": "warn", // General rule for unused variables
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_"
      }
    ], // Specific rule for TypeScript,
    "react/react-in-jsx-scope": "off"
  },
  "settings": {
    "react": {
      "version": "detect" // Automatically detect the react version
    }
  }
}
